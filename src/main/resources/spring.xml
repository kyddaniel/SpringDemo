<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--<bean id="alien" class="org.springDemo.Alien" scope="singleton">
    </bean>-->

    <bean id="alien" class="org.springDemo.Alien">
        <!-- This calls setter injection when start-->
        <property name="age" value="21"></property>

        <!-- Assign a reference (inject a reference of other beans)-->
        <property name="laptop" ref="lap"></property>
    </bean>

    <bean id="lap" class="org.springDemo.Laptop" scope="prototype">
    </bean>

</beans>

